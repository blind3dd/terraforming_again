# SSH Client Configuration
# This file configures SSH client settings for secure connections

# Global SSH configuration
Host *
    # Security settings
    Protocol 2
    HashKnownHosts yes
    GSSAPIAuthentication no
    GSSAPIDelegateCredentials no
    
    # Connection settings
    ServerAliveInterval 60
    ServerAliveCountMax 3
    TCPKeepAlive yes
    
    # Key settings
    IdentitiesOnly yes
    AddKeysToAgent yes
    UseKeychain yes
    
    # Performance settings
    Compression yes
    ControlMaster auto
    ControlPath ~/.ssh/control-%h-%p-%r
    ControlPersist 10m

# Configuration for local connections
Host localhost
    HostName localhost
    User ec2-user
    IdentityFile ~/.ssh/id_rsa
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Configuration for AWS instances
Host *.amazonaws.com
    User ec2-user
    IdentityFile ~/.ssh/id_rsa
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ServerAliveInterval 60
    ServerAliveCountMax 3

# Configuration for internal network
Host 10.* 172.* 192.168.*
    User ec2-user
    IdentityFile ~/.ssh/id_rsa
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
